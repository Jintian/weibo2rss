<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom"
        >
    <channel>
        <atom:link href="http://weibo2rss.cloudfoundry.com/generate/$!user.id" rel="self" type="application/rss+xml" />
        <title>$!user.screenName @新浪微博</title>
        <link>
        http://weibo.com/$!user.id</link>
        <description>新浪微博RSS实时生成</description>
        <language>zh-cn</language>
        <copyright>By http://weibo.com/jintiandeng</copyright>
        <image>
            <url>$!user.avatarLarge</url>
            <title>$!user.screenName @新浪微博</title>
            <link>
            http://weibo.com/$!user.id</link>
        </image>


        #foreach( $!status in $statusList )
            <item>
                <title><![CDATA[
                    #if( $!status.text.length()>10)
                        $!status.text.substring(0,10)
                    #else
                        $!status.text
                    #end
                    ]]></title>
                <link>http://api.t.sina.com.cn/$!user.id/statuses/$!status.id</link>
                <pubDate>$date.format("E, dd MMM yyyy HH:mm:ss Z",$!status.createdAt)</pubDate>
                <guid> http://api.t.sina.com.cn/$!user.id/statuses/$!status.id</guid>
                <description><![CDATA[
                    $!status.text
                    #if( $StringUtils.isNotBlank($!status.originalPic) )
                        <br/>
                        <a href="$!status.originalPic" title="点击看原图" target="_blank">
                            <img src="$!status.originalPic" border=0/>
                        </a>
                    #end
                    ]]>
                </description>
            </item>
        #end


    </channel>
</rss>